<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="../../../src/template/tokens.css" />
    </head>
    <body>
        {{#each tokenPages}}
        <div
            class="page"
            style="width: {{../layoutSizes.pageWidth}}px; height: {{../layoutSizes.pageHeight}}px;"
        >
            <div
                class="printable-area"
                style="width: {{../layoutSizes.printableWidth}}px; height: {{../layoutSizes.printableHeight}}px"
            >
                <div
                    class="tokens"
                    style="grid-template-columns: repeat(auto-fill, {{../layoutSizes.tokenAreaSize}}px);"
                >
                    {{#each this}}
                    <div
                        class="token-holder"
                        style="width: {{../../layoutSizes.tokenAreaSize}}px; height: {{../../layoutSizes.tokenAreaSize}}px;"
                    >
                        <div
                            class="token"
                            style="width: {{../../layoutSizes.largeTokenSize}}px; height: {{../../layoutSizes.largeTokenSize}}px;"
                        >
                            <img
                                src="{{this.image}}"
                                width="{{../../layoutSizes.largeTokenSize}}px"
                                height="{{../../layoutSizes.largeTokenSize}}px"
                            />
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </body>
</html>
