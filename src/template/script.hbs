<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <link rel="stylesheet" href="../../../src/template/script.css" />
    </head>
    <body>
        <div class="page">
            <div class="script-container">
                <div
                    class="sidebar"
                    style="background-image: url({{getRelativePath coverImage}})"
                ></div>
                <div class="header">{{name}}</div>
                <div class="ntfn">*Not the Fist Night</div>
                <div class="role-organiser-container">
                    <div class="sidebar-townsfolk sidebar-text">TOWNSFOLK</div>
                    <div class="sidebar-outsider sidebar-text">OUTSIDER</div>
                    <div class="sidebar-minion sidebar-text">MINION</div>
                    <div class="sidebar-demon sidebar-text">DEMON</div>
                    <div class="role-townsfolk">
                        <div
                            class="role-container"
                            style="grid-template-rows: repeat({{divide townsfolk.length 2}}, auto)"
                        >
                            {{#each townsfolk}}
                            <div class="role">
                                <div class="role-icon">
                                    <img src="{{this.image}}" />
                                </div>
                                <div>
                                    <div class="role-title">{{this.name}}</div>
                                    <div class="role-description">
                                        {{this.ability}}
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="role-outsider">
                        <div
                            class="role-container"
                            style="grid-template-rows: repeat({{divide outsiders.length 2}}, auto)"
                        >
                            {{#each outsiders}}
                            <div class="role">
                                <div class="role-icon">
                                    <img src="{{this.image}}" />
                                </div>
                                <div>
                                    <div class="role-title">{{this.name}}</div>
                                    <div class="role-description">
                                        {{this.ability}}
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="role-minion">
                        <div
                            class="role-container"
                            style="grid-template-rows: repeat({{divide minions.length 2}}, auto)"
                        >
                            {{#each minions}}
                            <div class="role">
                                <div class="role-icon">
                                    <img src="{{this.image}}" />
                                </div>
                                <div>
                                    <div class="role-title">{{this.name}}</div>
                                    <div class="role-description">
                                        {{this.ability}}
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="role-demon">
                        <div
                            class="role-container"
                            style="grid-template-rows: repeat({{divide demons.length 2}}, auto)"
                        >
                            {{#each demons}}
                            <div class="role">
                                <div class="role-icon">
                                    <img src="{{this.image}}" />
                                </div>
                                <div>
                                    <div class="role-title">{{this.name}}</div>
                                    <div class="role-description">
                                        {{this.ability}}
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="page">
            <div
                class="back-page-container"
                style="background-image: url({{getRelativePath coverImage}})"
            >
                <div class="title">{{name}}</div>
            </div>
        </div>
        <div class="page">
            <div class="night-container">
                <div
                    class="sidebar"
                    style="background-image: url({{getRelativePath coverImage}})"
                >
                    <div class="sidebar-text" style="padding-top: 70px">
                        FIRST NIGHT
                    </div>
                </div>
                <div
                    class="night-order-container"
                    style="grid-template-rows: repeat({{nightOrder.firstNight.length}}, min-content)"
                >
                    {{#each nightOrder.firstNight}}
                    <div class="night-order-role-icon">
                        <img src="{{getRelativePath this.image}}" />
                    </div>
                    <div class="night-order-role-title">{{this.name}}</div>
                    <div class="night-order-role-ability">
                        {{this.firstNightReminder}}
                    </div>

                    {{/each}}
                </div>
            </div>
        </div>
        <div class="page">
            <div class="night-container">
                <div
                    class="sidebar"
                    style="background-image: url({{getRelativePath coverImage}})"
                >
                    <div class="sidebar-text" style="padding-top: 70px">
                        OTHER NIGHT
                    </div>
                </div>
                <div
                    class="night-order-container"
                    style="grid-template-rows: repeat({{nightOrder.otherNight.length}}, min-content)"
                >
                    {{#each nightOrder.otherNight}}
                    <div class="night-order-role-icon">
                        <img src="{{getRelativePath this.image}}" />
                    </div>
                    <div class="night-order-role-title">
                        {{getRelativePath this.image}}
                    </div>
                    <div class="night-order-role-ability">{{this.image}}</div>
                    {{/each}}
                </div>
            </div>
        </div>
    </body>
</html>
