{
    "name": "ClocktowerAPI",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/davotronic5000/ClocktowerAPI.git",
    "author": "Dave <d.garnar@uk.cdw.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "typecheck": "tsc --noEmit --watch",
        "start": "node dist/index.js",
        "dev": "nodemon",
        "predev": "yarn swagger",
        "prebuild": "yarn swagger",
        "swagger": "tsoa spec"
    },
    "dependencies": {
        "express": "^4.18.2",
        "morgan": "^1.10.0",
        "prettier": "^2.8.6",
        "swagger-ui-express": "^4.6.2",
        "tsoa": "^5.1.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/morgan": "^1.9.4",
        "@types/node": "^18.15.5",
        "@types/swagger-ui-express": "^4.1.3",
        "concurrently": "^7.6.0",
        "nodemon": "^2.0.21",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.2"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts",
        "exec": "ts-node src/index.ts"
    }
}
